<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#5d9bc7"
    tools:context="org.mozilla.kitfox.MainActivity">


    <org.mozilla.geckoview.GeckoView
        android:id="@+id/geckoview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <LinearLayout
        android:id="@+id/chat_view"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#e9e9ea"
        android:gravity="bottom"
        android:visibility="gone"
        >

        <TextView
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:background="@drawable/outgoing_speech_bubble"
            android:layout_gravity="center"
            android:text="Play some Jazz music"
            android:layout_marginBottom="10dp"
            android:paddingLeft="25dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="15sp"
            />

        <TextView
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:background="@drawable/incoming_speech_bubble"
            android:layout_gravity="center"
            android:text="OK, playing Cool Jazz Vibes on YouTube Music..."
            android:layout_marginBottom="10dp"
            android:paddingRight="25dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="15sp"
            />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/system_toolbar"
        android:layout_width="fill_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#e9e9ea">

        <ImageButton
            android:id="@+id/home_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:background="@drawable/toolbar_button_selector"
            android:src="@drawable/home_button"
            android:onClick="goHome" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:background="@drawable/urlbar_background"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/speak_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="4dp"
                android:background="@android:color/transparent"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:src="@drawable/speak_button" />

            <EditText
                android:id="@+id/urlbar"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="How can I help?"
                android:inputType="text"
                android:maxLines="1"
                android:padding="5dp"
                android:imeOptions="actionDone" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/overflow_button"
            android:layout_width="48dp"
            android:layout_height="24dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:background="@android:color/transparent"
            android:src="@drawable/overflow_button" />

    </LinearLayout>
</LinearLayout>
